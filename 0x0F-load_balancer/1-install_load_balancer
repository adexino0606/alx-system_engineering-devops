#!/usr/bin/env bash# Script that configures HAproxy in a load balancer apt-get -y install software-properties-commonadd-apt-repository -y ppa:vbernat/haproxy-2.0apt-get -y updateapt-get -y install haproxy=2.0.\*echo -e "\nfrontend http\n\tbind *:80\n\tmode http\n\tdefault_backend web-backend\n\nbackend web-backend\n\tbalance roundrobin\n\tserver 11303-web-01 3.238.126.83:80 check\n\tserver 11303-web-02 18.232125.225:80 check" >> /etc/haproxy/haproxy.cfgservice haproxy restart
